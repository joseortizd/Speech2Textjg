#!/usr/bin/env node

/**
 * Dependencias del m贸dulo.
 */

var app = require('../app');
var debug = require('debug')('speech2textfallabellajg:server');
var http = require('http');

/**
 * Se obtiene el puerto donde se este ejecutando la aplicaci贸n
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Se crea un servidor http.
 */

var server = http.createServer(app);


server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Se comprueba la validez del puerto devuelto por el ambiente
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Listener para cualquier error en el servidor http.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Listener para la ejecuci贸n en el puerto proporcionado por el ambiente, o el indicado en la aplicaci贸n.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
